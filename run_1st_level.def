Bootstrap: docker
From: neurodocker/fsl:6.0.6.4

%environment
    export FSLDIR=/opt/fsl
    export PATH=$FSLDIR/bin:$PATH
    export FSLOUTPUTTYPE=NIFTI_GZ
    export DEBIAN_FRONTEND=noninteractive

%post
    export DEBIAN_FRONTEND=noninteractive
    unset LD_LIBRARY_PATH  # prevent libc upgrade issues

    # Ensure system packages are up to date
    apt-get update && apt-get install -y --no-install-recommends \
        python3 python3-pip python3-dev \
        git bzip2 \
        libglib2.0-0 libxext6 libsm6 libxrender1 \
        pkg-config libhdf5-dev ca-certificates \
        && apt-get clean && rm -rf /var/lib/apt/lists/*

    # Confirm pip3 is available and upgrade it
    which pip3 || echo "pip3 not found!"
    python3 -m pip install --upgrade pip

    # Install required Python packages
    pip3 install \
        bids \
        nipype \
        pandas \
        templateflow \
        numpy \
        niworkflows

    # Make main script executable
    chmod +x /app/run_1st_level.py

%files
    run_1st_level.py /app/run_1st_level.py
    workflows.py /app/workflows.py
    utils.py /app/utils.py

%runscript
    exec python3 /app/run_1st_level.py "$@"
