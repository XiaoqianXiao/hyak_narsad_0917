Bootstrap: docker
From: neurodebian:stretch-non-free

%environment
    export DEBIAN_FRONTEND=noninteractive
    export FSLDIR=/usr/share/fsl/5.0
    export PATH=${FSLDIR}/bin:$PATH
    export FSLOUTPUTTYPE=NIFTI_GZ

%post
    export DEBIAN_FRONTEND=noninteractive

    # Enable non-free sources (in case they're disabled)
    sed -i 's/main/main non-free contrib/' /etc/apt/sources.list

    # Install system and FSL dependencies
    apt-get update && apt-get install -y --no-install-recommends \
        fsl-core \
        python3 \
        python3-pip \
        python3-dev \
        wget \
        bzip2 \
        libglib2.0-0 \
        libxext6 \
        libsm6 \
        libxrender1 \
        git \
        pkg-config \
        libhdf5-dev \
        && apt-get clean && rm -rf /var/lib/apt/lists/*

    # Ensure /dev/null exists
    mknod -m 666 /dev/null c 1 3 || true

    # Install Python packages
    pip3 install --upgrade pip
    pip3 install \
        bids \
        nipype \
        pandas \
        templateflow \
        numpy \
        niworkflows

%files
    run_1st_level.py /app/run_1st_level.py
    workflows.py /app/workflows.py
    utils.py /app/utils.py

%post
    chmod +x /app/run_1st_level.py

%runscript
    exec python3 /app/run_1st_level.py "$@"