Bootstrap: docker
From: nipreps/fsl:6.0.4

%environment
    export FSLDIR=/opt/fsl
    export PATH=$FSLDIR/bin:$PATH
    export FSLOUTPUTTYPE=NIFTI_GZ
    export DEBIAN_FRONTEND=noninteractive

%post
    export DEBIAN_FRONTEND=noninteractive
    unset LD_LIBRARY_PATH  # Prevent libc upgrade issues

    # Install pip3 and dependencies
    apt-get update && apt-get install -y --no-install-recommends \
        python3-pip \
        python3-dev \
        git \
        bzip2 \
        libglib2.0-0 \
        libxext6 \
        libsm6 \
        libxrender1 \
        pkg-config \
        libhdf5-dev \
        ca-certificates \
        && apt-get clean && rm -rf /var/lib/apt/lists/*

    # Confirm pip3 is available
    which pip3
    pip3 install --upgrade pip

    # Install Python packages
    pip3 install \
        bids \
        nipype \
        pandas \
        templateflow \
        numpy \
        niworkflows

%files
    run_1st_level.py /app/run_1st_level.py
    workflows.py /app/workflows.py
    utils.py /app/utils.py
%post
    chmod +x /app/run_1st_level.py

%runscript
    exec python3 /app/run_1st_level.py "$@"
