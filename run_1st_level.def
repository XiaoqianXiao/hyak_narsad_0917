Bootstrap: docker
From: ubuntu:20.04

%environment
    export DEBIAN_FRONTEND=noninteractive
    export FSLDIR=/usr/local/fsl
    export PATH=${FSLDIR}/bin:$PATH
    export FSLOUTPUTTYPE=NIFTI_GZ

%post
    export DEBIAN_FRONTEND=noninteractive

    apt-get update && apt-get install -y --no-install-recommends \
        curl \
        python3 \
        python3-pip \
        python3-dev \
        git \
        bzip2 \
        libglib2.0-0 \
        libxext6 \
        libsm6 \
        libxrender1 \
        pkg-config \
        libhdf5-dev \
        ca-certificates \
        && apt-get clean && rm -rf /var/lib/apt/lists/*

    mknod -m 666 /dev/null c 1 3 || true

    # Correct URL for FSL installer
    curl -sSL https://git.fmrib.ox.ac.uk/fsl/fslinstaller/-/raw/main/fslinstaller.py -o /tmp/fslinstaller.py
    python3 /tmp/fslinstaller.py -V 6.0.4 -d /usr/local/fsl -f

    pip3 install --upgrade pip
    pip3 install \
        bids \
        nipype \
        pandas \
        templateflow \
        numpy \
        niworkflows


%files
    run_1st_level.py /app/run_1st_level.py
    workflows.py /app/workflows.py
    utils.py /app/utils.py

%post
    chmod +x /app/run_1st_level.py

%runscript
    exec python3 /app/run_1st_level.py "$@"